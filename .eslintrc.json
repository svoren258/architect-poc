{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nrwl/nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "domain:public",
                "onlyDependOnLibsWithTags": [
                  "domain:public"
                ]
              },
              {
                "sourceTag": "domain:dashboards-private",
                "onlyDependOnLibsWithTags": [
                  "domain:dashboards-private",
                  "domain:public"
                ]
              },
              {
                "sourceTag": "domain:settings-private",
                "onlyDependOnLibsWithTags": [
                  "domain:settings-private",
                  "domain:public"
                ]
              },
              {
                "sourceTag": "domain:spaces-private",
                "onlyDependOnLibsWithTags": [
                  "domain:spaces-private",
                  "domain:public"
                ]
              },
              {
                "sourceTag": "domain:sidebar-private",
                "onlyDependOnLibsWithTags": [
                  "domain:sidebar-private",
                  "domain:public"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:data",
                  "type:domain",
                  "type:ui",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:data",
                "onlyDependOnLibsWithTags": [
                  "type:domain",
                  "type:data",
                  "type:state",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:domain",
                  "type:ui",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:state",
                "onlyDependOnLibsWithTags": [
                  "type:domain",
                  "type:data",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:domain",
                "onlyDependOnLibsWithTags": [
                  "type:domain",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": [
                  "type:util"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/javascript"
      ],
      "rules": {}
    }
  ]
}
